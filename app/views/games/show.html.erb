<div class ="background_games">
<div class = "countainer">
  <div class ="row">
    <div class = "col-xs-10 col-sm-offset-4 col-md-8 col-md-offset-3">

    <div class = "show_games">
      <div>
        <p><%=@game.pct_team%></p>
        <%= simple_form_for @game, url: home_game_path(@game), method: :post do |f| %>
          <%= f.submit @game.local, class: "btn-request", data:{target: "#exampleModal", toggle: "modal"}%>
        <% end %>

      </div>

      <div>
        <h2><%=" VS "%></h2>
      </div>

      <div>
        <p> <%=@game.pct_tie%></p>
         <%= simple_form_for @game, url: away_game_path(@game), method: :post do |f| %>
          <%= f.submit @game.visit, class: "btn-request",  data:{target: "#myModal", toggle: "modal"}%>
          <% end %>

      </div>

        <div>
          <h3 class ="date_show"><%=@game.date_show%></h3>
        </div>
    </div>


<!-- Modal -->
